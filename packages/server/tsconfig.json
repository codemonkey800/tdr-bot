{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "composite": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "skipLibCheck": true,
    "rootDir": "../.."
  },
  "include": ["src/**/*.ts", "*.ts", "../shared/src/**/*.ts"],
  "references": [{ "path": "../shared" }]
}
