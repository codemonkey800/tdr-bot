{
  "name": "tdr-quotes-bot",
  "license": "MIT",
  "scripts": {
    "build": "webpack build --color --progress",
    "build:dev": "NODE_ENV=development yarn build",
    "build:prod": "NODE_ENV=production yarn build",
    "dev": "run-p dev:*",
    "dev:fix-nodemon-crash": "mkdir -p dist && touch dist/tdr-bot.js",
    "dev:bot": "nodemon -w dist -e js --exec 'yarn start'",
    "dev:build": "yarn build:dev --watch",
    "clean": "rm -rf dist",
    "lint": "eslint src",
    "start": "node ./dist/tdr-bot start"
  },
  "dependencies": {
    "axios": "1.4.0",
    "cheerio": "1.0.0-rc.12",
    "discord.js": "14.11.0",
    "dotenv": "16.0.3",
    "inversify": "^6.0.1",
    "lodash": "^4.17.21",
    "node-schedule": "^2.1.1",
    "reflect-metadata": "^0.1.13",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.195",
    "@types/node-schedule": "^2.1.0",
    "@types/yargs": "^17.0.24",
    "@typescript-eslint/eslint-plugin": "5.59.7",
    "@typescript-eslint/parser": "5.59.7",
    "eslint": "8.41.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-import-resolver-typescript": "3.5.5",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "eslint-plugin-unused-imports": "2.0.0",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "prettier": "2.8.8",
    "ts-loader": "^9.4.3",
    "tsconfig-paths-webpack-plugin": "^4.0.1",
    "typescript": "5.0.4",
    "webpack": "^5.84.1",
    "webpack-cli": "^5.1.1",
    "webpack-node-externals": "^3.0.0"
  }
}
