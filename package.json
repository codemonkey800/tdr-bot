{
  "name": "tdr-bot",
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "clean": "pnpm -r clean",
    "clean:modules": "run-p -l 'clean:modules:*'",
    "clean:modules:root": "del -rf node_modules",
    "clean:modules:packages": "pnpm -r clean:modules",
    "dev": "pnpm -r dev",
    "update-deps": "ncu -u && pnpm -r exec ncu -u"
  },
  "devDependencies": {
    "del-cli": "^5.1.0",
    "npm-check-updates": "^16.14.14",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
